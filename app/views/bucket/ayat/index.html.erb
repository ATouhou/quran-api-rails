<h1>Listing result</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @result.each do |result| %>
    <tr>
        <td>
            <h1><%= result.ayah_key %></h1>
            <% result.roots.each do |root| %>
                <h2>root <%= root.text %></h2>
                <% root.terms.each do |term| %>
                <h3>term <%= term.text %></h3>
                <% end %>
            <% end %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
